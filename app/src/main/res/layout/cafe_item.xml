<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/cafeTeaserIV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/teaser_image"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/cafeTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_marginStart="0dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorPrimaryLight"
        android:layout_marginTop="18dp"
        android:layout_gravity="start"
        android:layout_centerInParent="false"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            >

        <TextView
            android:id="@+id/cafeStreetLineTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/cafeCityLineTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            />

        <TextView
            android:id="@+id/cafeCountryLineTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            />

            <TextView
                android:id="@+id/cafePhoneLineTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/cafeEmailLineTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                />

        </LinearLayout>

</LinearLayout>


